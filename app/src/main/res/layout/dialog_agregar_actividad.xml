<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/spinnerPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:prompt="@string/prompt_elige_paciente" />


    <EditText
        android:id="@+id/etNombreActividad"
        android:hint="Nombre de la actividad"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Fecha y Hora -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/reloj"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_marginStart="8dp"
            android:text="Selecciona fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvHora"
            android:layout_marginStart="8dp"
            android:text="Selecciona hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Recordatorios -->
    <!-- Recordar Antes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_recordatorio" />

        <Spinner
            android:id="@+id/spinnerRecordarAntes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Frecuencia -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_frecuencia" />

        <Spinner
            android:id="@+id/spinnerFrecuencia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- Descripción -->
    <EditText
        android:id="@+id/etDescripcion"
        android:hint="Descripción"
        android:layout_marginTop="8dp"
        android:minLines="3"
        android:gravity="top"
        android:background="@drawable/rounded_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Botón guardar -->
    <Button
        android:id="@+id/btnGuardar"
        android:text="Guardar"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:backgroundTint="#216AF4"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
</LinearLayout>
