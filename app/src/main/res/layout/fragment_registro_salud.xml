<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro_salud">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="99dp">

                <!-- Imagen de encabezado -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_header" />

                <!-- TÃ­tulo sobre la imagen -->
                <TextView
                    android:id="@+id/tituloServicios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registros de salud"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="33dp"/>
            </RelativeLayout>


            <!-- Tarjeta: Episodios salud -->
            <LinearLayout
                android:id="@+id/registroSalud"
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:elevation="2dp"
                android:gravity="center_vertical">

                <!-- Fondo azul con icono encima -->
                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="12dp">

                    <!-- Fondo azul completamente ajustado -->
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/fondo_azul" />

                    <!-- Icono centrado -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/episodiossalud"
                        android:layout_marginLeft="3dp"/>
                </FrameLayout>

                <!-- Texto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Episodios salud"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>


            <!-- Tarjeta: Registro cuidados -->
            <LinearLayout
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:elevation="2dp"
                android:gravity="center_vertical">

                <!-- Fondo azul con icono encima -->
                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="12dp">

                    <!-- Fondo azul completamente ajustado -->
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/fondo_azul" />

                    <!-- Icono centrado -->
                    <ImageView
                        android:layout_width="71dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/registrocuidados"
                        android:layout_marginLeft="1dp"/>
                </FrameLayout>

                <!-- Texto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recordatorios"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Tarjeta: Registros de sintomas -->
            <LinearLayout
                android:layout_width="392dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:gravity="center_vertical">

                <!-- Fondo azul con icono encima -->
                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="12dp">

                    <!-- Fondo azul completamente ajustado -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/fondo_azul" />

                    <!-- Icono centrado -->
                    <ImageView
                        android:layout_width="49dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/registrosintomas"
                        android:layout_marginLeft="3dp"/>
                </FrameLayout>

                <!-- Texto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registros de sintomas"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

        </LinearLayout>

</FrameLayout>