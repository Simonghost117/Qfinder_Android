<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.PerfilComunidad">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/back"
                android:scaleType="fitCenter"
                android:background="@color/white"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen circular -->
            <ImageView
                android:id="@+id/imgComunidad"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_azul"
                android:padding="12dp" />

            <!-- Nombre y miembros -->
            <TextView
                android:id="@+id/tvNombreComunidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo de comunidad"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tvMiembrosComunidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numero de integrantes"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"/>

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                android:layout_marginTop="16dp">


                <LinearLayout
                    android:id="@+id/btnShared"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/shapeeste"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/compartiricono" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Compartir"
                        android:textColor="#000000"
                        android:textSize="19sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#000000"/>
            <!-- Descripci贸n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Descripci贸n de la comunidad"
                android:layout_marginTop="17dp"/>

            <!-- Fecha de creaci贸n -->
            <TextView
                android:id="@+id/textCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Se cre贸 el 29/04/2025"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginTop="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/btnsalirComunidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:text="Salir de la comunidad"
                android:textColor="@color/rojopasion"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:paddingHorizontal="0dp"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/salircomunidad"/>

            <Button
                android:id="@+id/dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_marginTop="15dp"
                android:text="Reportar canal"
                android:textColor="@color/rojopasion"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:paddingHorizontal="0dp"
                android:background="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/dislike"/>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>
    </LinearLayout>
    </ScrollView>

</FrameLayout>