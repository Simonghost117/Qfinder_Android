<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Fragment_verificar_codigo">

    <!-- Toolbar personalizada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="#66B2FF"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:contentDescription="Volver"
            android:src="@drawable/flecha" />

        <TextView
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Verificar Código"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/instructionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa el código que te enviamos"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Contenedor de los 4 dígitos -->
        <LinearLayout
            android:id="@+id/codeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/digit1"
                style="@style/CodeEditText"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"/>

            <EditText
                android:id="@+id/digit2"
                style="@style/CodeEditText"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"/>

            <EditText
                android:id="@+id/digit3"
                style="@style/CodeEditText"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="8dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"/>

            <EditText
                android:id="@+id/digit4"
                style="@style/CodeEditText"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"/>
            <EditText
                android:id="@+id/digit5"
                style="@style/CodeEditText"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Enlace para reenviar código -->
        <TextView
            android:id="@+id/resendCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Reenviar código"
            android:textColor="#2196F3"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <!-- Botón Confirmar -->
        <Button
            android:id="@+id/confirmButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Confirmar"
            android:textColor="@android:color/white"
            android:backgroundTint="#2196F3"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</LinearLayout>