<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_failure_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/add"
        android:backgroundTint="@color/rojopasion"/>

    <TextView
        android:id="@+id/tv_failure_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â¡Pago fallido!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_failure_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No pudimos procesar tu pago. Por favor intenta nuevamente."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reintentar"
        android:backgroundTint="@color/Botones"
        android:layout_marginTop="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="376dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_cancelar"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:textColor="#4E9EFB" />
</LinearLayout>