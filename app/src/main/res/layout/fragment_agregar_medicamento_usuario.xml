<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Spinner para pacientes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elige al paciente"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinner_patients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Spinner para medicamentos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elige el medicamento"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <Spinner
            android:id="@+id/spinner_medications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Selección de fechas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de inicio - Fecha de fin"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:id="@+id/layout_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_selected_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar fechas"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/ic_menu_my_calendar"/>
        </LinearLayout>

        <!-- Campo para dosis -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosis"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/et_dosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Especificar dosis"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <!-- Campo para descripción/observaciones -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Especificación"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Agregar descripción o instrucciones"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="24dp"/>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>