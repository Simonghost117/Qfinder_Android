<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa de sombra -->
    <item android:left="1dp" android:top="1dp">
        <shape android:shape="oval">
            <solid android:color="#33000000" /> <!-- Sombra negra con opacidad -->
            <size android:width="30dp" android:height="30dp" />
        </shape>
    </item>

    <!-- Capa de fondo blanco con borde -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- Fondo blanco -->
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Borde gris claro -->
            <size android:width="26dp" android:height="26dp" />
        </shape>
    </item>

</layer-list>
