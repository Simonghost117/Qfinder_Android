<resources>
    <!-- Estilo para encabezados de tabla -->
    <style name="TableHeaderStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo para filas de tabla -->
    <style name="TableRowStyle">
        <item name="android:textColor">#444444</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Estilo para tablas -->
    <style name="MyTableStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:shrinkColumns">*</item>
    </style>
    <style name="SectionTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="PatientData">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>


    <style name="CodEditText">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/code_edittext1_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ActivitiesText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- Estilos para el MaterialCalendarView 2.0.1 -->
    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CalendarMonthTitleTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#1983ff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarDateTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalendarTodayStyle" parent="">
        <item name="android:background">@drawable/rounded_gray_background</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="CodeEditText">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/code_edittext_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Estas 3 líneas son críticas -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>

    <style name="table_header_cell">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="table_cell">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">#F9F9F9</item>
    </style>

</resources>