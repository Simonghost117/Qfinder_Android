<resources>
    <!-- Estilo para encabezados de tabla -->
    <style name="TableHeaderStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo para filas de tabla -->
    <style name="TableRowStyle">
        <item name="android:textColor">#444444</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Estilo para tablas -->
    <style name="MyTableStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:shrinkColumns">*</item>
    </style>
    <style name="SectionTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="PatientData">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ActivitiesText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <style name="CodeEditText">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/code_edittext_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>